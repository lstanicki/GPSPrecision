<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/locationTextField" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="Wyszukaj"
            android:id="@+id/searchButton"
            android:layout_gravity="right"
            android:onClick="onSearch"
            android:background="@drawable/button_styles"
            android:textColor="@color/White" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:text="ZmieÅ„ typ mapy"
            android:id="@+id/mapTypeButton"
            android:layout_gravity="right"
            android:onClick="onChangeType"
            android:background="@drawable/button_styles"
            android:textColor="@color/White" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="240dp"
            android:layout_height="565dp"
            tools:context="com.example.lukasz.gpsprecision.MapsActivity"
            android:layout_weight="0.97" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="+"
                android:id="@+id/zoomInButton"
                android:layout_gravity="right"
                android:onClick="onZoom"
                android:background="@drawable/menu_styles"
                android:textColor="@color/White" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:text="-"
                android:id="@+id/zoomOutButton"
                android:layout_gravity="right"
                android:onClick="onZoom"
                android:background="@drawable/menu_styles"
                android:textColor="@color/White" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="20dp"
                android:layout_height="100dp"
                android:id="@+id/centerButton"
                android:background="@drawable/menu_styles"
                android:textColor="@color/White"
                android:onClick="getAllMarkers"
                android:text="C" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>


