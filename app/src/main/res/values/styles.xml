<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTheme" parent="android:Theme.Black.NoTitleBar">
        <!--<item name="android:windowBackground">@android:color/background_light</item>-->
        <item name="android:panelFullBackground">@drawable/menu_styles</item>
        <item name="android:panelTextAppearance">@color/DarkOrange70</item>
        <item name="android:windowBackground">@color/Black</item>
    </style>

    <style name="FullscreenTheme" parent="MyTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:panelFullBackground">@color/DarkRed</item>
    </style>


    <!-- APP Theme which extends Theme App Compact -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButton</item>

        <item name="android:dropDownListViewStyle">@style/PopupMenuListView</item>
        <item name="dropDownListViewStyle">@style/PopupMenuListView</item>

        <item name="actionBarDivider">@null</item>

        <!-- OverFlow Menu Text Color -->
        <item name="android:textColor">@color/White</item>
    </style>

    <!-- Set Custom Icon for Overflow Button in ActionBar -->
    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_white_24dp</item>
    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/White</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:background">@drawable/menu_styles</item>
    </style>

</resources>
